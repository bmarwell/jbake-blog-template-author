{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["^org\\.apache\\.maven\\.plugins:.*"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "versioning": "minor",
      "automerge": true,
      "automergeType": "pr",
      "matchPackageNames": [
        "!^org\\.apache\\.maven\\.plugins:.*"
      ]
    },
    {
      "matchManagers": ["github-actions"],
      "automerge": true,
      "automergeType": "pr"
    }
  ]
}
